{% extends 'templates/admin/acp/main.twig' %}

{% block title %}Cache Settings{% endblock %}

{% block acpcontent %}
	<div class="col-md-6 col-md-offset-2">
		<p class="lead">
			<b>Note:</b> Twig caching is useful for speeding up sleeti at the cost of some disk space.
		</p>

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					Cache Settings
				</h3>
			</div>

			<div class="panel-body">
				<form action="{{ path_for('admin.acp.cache') }}" method="post" autocomplete="off">
					<div class="checkbox">
						<label>
							<input type="checkbox" name="enabled" value="1"{{ settings.cache.enabled ? ' checked' : '' }}> Enable Twig caching
						</label>
					</div>

					<div class="form-group">
						<label for="path">Path</label>
						<input type="text" class="form-control" name="path" id="path" value="{{ settings.cache.path }}" placeholder="/var/www/sleeti/resources/cache/">
					</div>

					<div class="checkbox">
						<label>
							<input type="checkbox" name="auto_reload" value="1"{{ settings.cache.auto_reload ? ' checked' : '' }}> Enable auto-reloading
						</label>
						<span class="help-block">At the cost of some performance, you can enable this to recompile your Twig templates when you edit them.</span>
					</div>

					<button type="submit" class="btn btn-default">Submit</button>

					{{ csrf.field | raw }}
				</form>
			</div>
		</div>
	</div>
{% endblock %}
