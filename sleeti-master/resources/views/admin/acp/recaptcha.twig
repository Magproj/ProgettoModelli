{% extends 'templates/admin/acp/main.twig' %}

{% block title %}reCAPTCHA Settings{% endblock %}

{% block acpcontent %}
	<div class="col-md-6 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					reCAPTCHA Settings
				</h3>
			</div>
			<div class="panel-body">
				<p class="lead">
					Need a site or secret key? <a href="https://www.google.com/recaptcha/admin">Click here</a>.
				</p>

				<form action="{{ path_for('admin.acp.recaptcha') }}" method="post" autocomplete="off">
					<div class="checkbox">
						<label>
							<input type="checkbox" name="enabled" value="1"{{ settings.recaptcha.enabled ? ' checked' : '' }}> Enable reCAPTCHA on <code>{{ path_for('auth.signup') }}</code>
						</label>
					</div>

					<div class="form-group">
						<label for="sitekey">reCAPTCHA site key</label>
						<input type="text" class="form-control" name="sitekey" id="sitekey" value="{{ settings.recaptcha.sitekey }}">
					</div>

					<div class="form-group">
						<label for="secretkey">reCAPTCHA secret key</label>
						<input type="text" class="form-control" name="secretkey" id="secretkey" value="{{ settings.recaptcha.secretkey }}">
					</div>

					<button type="submit" class="btn btn-default">Submit</button>

					{{ csrf.field | raw }}
				</form>
			</div>
		</div>
	</div>
{% endblock %}
